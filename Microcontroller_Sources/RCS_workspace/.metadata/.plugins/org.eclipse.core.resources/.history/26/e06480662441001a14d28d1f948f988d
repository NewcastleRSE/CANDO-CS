/*
** ===================================================================
**     Event       :  FC1_PH_OnInterrupt (module Events)
**
**     Component   :  FC1_PH [FreeCntr_LDD]
*/
/*!
**     @brief
**         This event is called when a compare matches the counter
**         value (if compare or reload is selected as a interrupt
**         source) or a counter overflows (for free-running devices).
**         Component and OnInterrupt event must be enabled. See
**         [SetEventMask] and [GetEventMask] methods. This event is
**         available only if a [Interrupt service/event] is enabled.
**     @param
**         UserDataPtr     - Pointer to the user or
**                           RTOS specific data. The pointer passed as
**                           the parameter of Init method.
*/
/* ===================================================================*/
void FC1_PH_OnInterrupt(LDD_TUserData *UserDataPtr)
{
	unsigned int i = 0, j = 0;
	unsigned int length = 120;                          // kernel length
	float rconv = 0;                                    // FIR output
	unsigned short t_total = 0;
	unsigned short p_unit = 0;
	unsigned short p_lengh = 0;
	unsigned int reg_abs = 0;
	unsigned short reg_line = 0;

	AD1_Measure(TRUE);                                  //  Enable ADC
	AD1_GetValue8(&reg1);                               //  Running ADC

	reg1 = reg1 - offset;

	reg2[length-1] = reg1;

	for(j = 0; j<length;j++)                    		// * the P-index value decides filter taps
	{
		rconv = taps[p_index][j]*convIntFloat(reg2[length-1-j]) + rconv;
	}

	if(set_inten == 0)
	{
		reg4 = convFloatInt(rconv)*scale;               // Outputs scaling to fit DAC

		if(reg4 >= threshold)                          	// Set intensity process
		{
			if (reg4 >= 4000)
			{
				reg4 = 4000;
			}
		}
		else
		{
			reg4 = 0;
		}
	}
	else if (set_inten == 1)
	{
		reg4 = convFloatInt(rconv)*scale;                // Outputs scaling to fit DAC

		if(reg4 > threshold)                          // Set intensity process
		{
			reg4 = scale*400;                           // Set output as the maximum value

			if (reg4  >= 4000)
			{
				reg4 = 4000;
			}
		}
		else
		{
			reg4 = 0;
		}
	}
	else
	{

	}

	for(i=0;i<length-1;i++)
	{
		reg2[i] = reg2[i+1];
	}

	DA1_SetValue(&reg4);
	reg3 = reg4;
}

